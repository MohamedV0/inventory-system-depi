@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row g-3">
    <!-- Profile Information Column -->
    <div class="col-lg-7">
        <!-- Main Form Card -->
        <div class="card content-card shadow-sm mb-3">
            <div class="card-header d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 d-flex align-items-center">
                    <span class="icon-circle bg-primary-subtle me-2">
                        <i class="fas fa-user-circle text-primary"></i>
                    </span>
                    Profile Information
                </h5>
            </div>
            <div class="card-body p-3">
                <partial name="_StatusMessage" for="StatusMessage" />
                
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Full Name -->
                    <div class="mb-3">
                        <label asp-for="Input.FullName" class="form-label d-flex align-items-center">
                            <i class="fas fa-user text-primary me-2"></i>Full Name
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-dark text-secondary">
                                <i class="fas fa-user"></i>
                            </span>
                            <input asp-for="Input.FullName" class="form-control bg-dark border-dark text-white" 
                                   placeholder="Enter your full name" />
                        </div>
                        <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label d-flex align-items-center">
                            <i class="fas fa-envelope text-primary me-2"></i>Email
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-dark text-secondary">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control bg-dark border-dark text-white" disabled />
                            @if (Model.IsEmailConfirmed)
                            {
                                <span class="input-group-text bg-dark border-dark text-success">
                                    <i class="fas fa-check-circle"></i>
                                </span>
                            }
                            else
                            {
                                <span class="input-group-text bg-dark border-dark text-warning" title="Email not confirmed">
                                    <i class="fas fa-exclamation-circle"></i>
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-3">
                        <label asp-for="Input.PhoneNumber" class="form-label d-flex align-items-center">
                            <i class="fas fa-phone text-primary me-2"></i>Phone Number
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-dark text-secondary">
                                <i class="fas fa-phone"></i>
                            </span>
                            <input asp-for="Input.PhoneNumber" class="form-control bg-dark border-dark text-white" 
                                   placeholder="Enter your phone number" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button id="update-profile-button" type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Tips Column -->
    <div class="col-lg-5">
        <!-- Help & Tips Card -->
        <div class="card content-card shadow-sm mb-3">
            <div class="card-header d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 d-flex align-items-center">
                    <span class="icon-circle bg-primary-subtle me-2">
                        <i class="fas fa-lightbulb text-primary"></i>
                    </span>
                    Tips & Information
                </h5>
            </div>
            <div class="card-body p-3">
                <div class="tip-item mb-3 p-2 rounded bg-primary-subtle">
                    <h6 class="d-flex align-items-center mb-2">
                        <i class="fas fa-info-circle me-2"></i>Profile Management
                    </h6>
                    <ul class="mb-0 ps-3 small">
                        <li>Keep your full name up to date</li>
                        <li>Use a valid phone number for notifications</li>
                        <li>Confirm your email for account security</li>
                    </ul>
                </div>
                
                <div class="tip-item p-2 rounded bg-warning-subtle">
                    <h6 class="d-flex align-items-center mb-2">
                        <i class="fas fa-shield-alt me-2"></i>Account Security
                    </h6>
                    <p class="small mb-0">Keeping your contact information updated helps maintain the security of your account and ensures you receive important notifications.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastrNotifications" />
}
