@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="card content-card shadow-sm mb-4">
    <div class="card-header d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0 d-flex align-items-center">
            <span class="icon-circle bg-primary-subtle me-2">
                <i class="fas fa-cog text-primary"></i>
            </span>
            Account Settings
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="nav-menu">
            <a class="nav-item @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                <div class="d-flex align-items-center">
                    <div class="nav-icon">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="nav-text">Profile</div>
                </div>
                <div class="nav-indicator">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>
            <a class="nav-item @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                <div class="d-flex align-items-center">
                    <div class="nav-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="nav-text">Email</div>
                </div>
                <div class="nav-indicator">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>
            <a class="nav-item @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                <div class="d-flex align-items-center">
                    <div class="nav-icon">
                        <i class="fas fa-key"></i>
                    </div>
                    <div class="nav-text">Password</div>
                </div>
                <div class="nav-indicator">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>
            @if (hasExternalLogins)
            {
                <a class="nav-item @ManageNavPages.ExternalLoginsNavClass(ViewContext)" id="external-login" asp-page="./ExternalLogins">
                    <div class="d-flex align-items-center">
                        <div class="nav-icon">
                            <i class="fas fa-external-link-alt"></i>
                        </div>
                        <div class="nav-text">External logins</div>
                    </div>
                    <div class="nav-indicator">
                        <i class="fas fa-chevron-right"></i>
                    </div>
                </a>
            }
            <a class="nav-item @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
                <div class="d-flex align-items-center">
                    <div class="nav-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="nav-text">Two-factor authentication</div>
                </div>
                <div class="nav-indicator">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>
            <a class="nav-item @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
                <div class="d-flex align-items-center">
                    <div class="nav-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="nav-text">Personal data</div>
                </div>
                <div class="nav-indicator">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Navigation menu styling */
    .nav-menu .nav-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 1rem;
        color: #e9ecef;
        text-decoration: none;
        border-bottom: 1px solid rgba(108, 117, 125, 0.25);
        transition: all 0.2s ease;
    }
    
    .nav-menu .nav-item:last-child {
        border-bottom: none;
    }
    
    .nav-menu .nav-item:hover {
        background-color: rgba(38, 143, 255, 0.1);
        color: #fff;
    }
    
    .nav-menu .nav-item.active {
        background-color: rgba(38, 143, 255, 0.15);
        color: #fff;
        border-left: 3px solid #0d6efd;
    }
    
    .nav-menu .nav-item.active .nav-icon {
        color: #0d6efd;
    }
    
    .nav-menu .nav-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        margin-right: 12px;
        color: #0d6efd;
    }
    
    .nav-menu .nav-text {
        font-weight: 500;
    }
    
    .nav-menu .nav-indicator {
        opacity: 0;
        color: #6c757d;
        transition: all 0.2s ease;
    }
    
    .nav-menu .nav-item:hover .nav-indicator,
    .nav-menu .nav-item.active .nav-indicator {
        opacity: 1;
        color: #0d6efd;
    }
</style>
