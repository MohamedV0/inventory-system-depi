@model InventoryManagementSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<style>
    /* Modern Color Palette */
    :root {
        --bg-dark: #0f172a;
        --bg-card: #1e293b;
        --bg-hover: #334155;
        --accent-primary: #3b82f6;
        --accent-secondary: #0ea5e9;
        --text-primary: #f8fafc;
        --text-secondary: #94a3b8;
        --text-muted: #64748b;
        --border-color: #2d3a4f;
        --success: #22c55e;
        --warning: #eab308;
        --danger: #ef4444;
    }

    body {
        background-color: var(--bg-dark);
        color: var(--text-primary);
    }

    /* Card Styles */
    .dashboard-card {
        background-color: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        border-color: var(--accent-primary);
    }

    .stat-card {
        position: relative;
        padding: 1.5rem;
    }

    .stat-card .icon-shape {
        position: absolute;
        right: -15px;
        bottom: -15px;
        font-size: 5rem;
        opacity: 0.05;
        transform: rotate(-15deg);
        transition: all 0.3s ease;
    }

    .dashboard-card:hover .icon-shape {
        transform: rotate(0deg) scale(1.1);
        opacity: 0.1;
    }

    .stat-value {
        font-size: 2.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0.5rem 0;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Table Styles */
    .card {
        background-color: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        overflow: hidden;
    }

    .card-header {
        background-color: rgba(59, 130, 246, 0.1) !important;
        border-bottom: 1px solid var(--border-color);
        padding: 1.25rem 1.5rem;
    }

    .table {
        color: var(--text-primary);
        margin-bottom: 0;
    }

    .table thead th {
        background-color: rgba(59, 130, 246, 0.05);
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .table tbody td {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--border-color);
        vertical-align: middle;
    }

    .table tbody tr:hover {
        background-color: var(--bg-hover);
    }

    /* Badge Styles */
    .badge {
        font-size: 0.75rem;
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        font-weight: 600;
    }

    .badge-danger {
        background-color: rgba(239, 68, 68, 0.2);
        color: #fca5a5;
    }

    .badge-warning {
        background-color: rgba(234, 179, 8, 0.2);
        color: #fcd34d;
    }

    /* Button Styles */
    .btn {
        padding: 0.5rem 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background-color: var(--accent-primary);
        border: none;
    }

    .btn-primary:hover {
        background-color: var(--accent-secondary);
        transform: translateY(-1px);
    }

    .btn-outline-light {
        border: 1px solid var(--border-color);
        color: var(--text-primary);
    }

    .btn-outline-light:hover {
        background-color: var(--bg-hover);
        border-color: var(--accent-primary);
        color: var(--text-primary);
    }

    .btn-action {
        width: 36px;
        height: 36px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

    .btn-action:hover {
        transform: translateY(-2px);
    }

    /* DataTable Customization */
    .dataTables_wrapper {
        color: var(--text-secondary);
        padding: 1rem;
    }

    .dataTables_length select,
    .dataTables_filter input {
        background-color: var(--bg-dark);
        color: var(--text-primary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 0.375rem 0.75rem;
    }

    .dataTables_length select:focus,
    .dataTables_filter input:focus {
        border-color: var(--accent-primary);
        outline: none;
    }

    .dataTables_filter input {
        min-width: 250px;
    }

    .page-item.active .page-link {
        background-color: var(--accent-primary);
        border-color: var(--accent-primary);
    }

    .page-link {
        background-color: var(--bg-card);
        border-color: var(--border-color);
        color: var(--text-primary);
    }

    .page-link:hover {
        background-color: var(--bg-hover);
        border-color: var(--accent-primary);
        color: var(--text-primary);
    }

    /* Custom Scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: var(--bg-dark);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--border-color);
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: var(--accent-primary);
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .stat-value {
            font-size: 1.75rem;
        }
        .stat-card {
            padding: 1rem;
        }
        .table thead th,
        .table tbody td {
            padding: 0.75rem 1rem;
        }
        .dataTables_filter input {
            min-width: 200px;
        }
    }
</style>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 d-flex align-items-center">
            <i class="fas fa-chart-line me-3 text-primary"></i>
            Inventory Dashboard
        </h1>
        <div class="d-flex gap-3">
            <button class="btn btn-primary d-flex align-items-center">
                <i class="fas fa-sync-alt me-2"></i>
                Refresh
            </button>
            <button class="btn btn-outline-light d-flex align-items-center">
                <i class="fas fa-file-export me-2"></i>
                Export
            </button>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="dashboard-card stat-card shadow-sm">
                <div class="stat-label">Total Products</div>
                <div class="stat-value">@Model.TotalProducts</div>
                <div class="icon-shape">
                    <i class="fas fa-boxes"></i>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="dashboard-card stat-card shadow-sm">
                <div class="stat-label">Inventory Value</div>
                <div class="stat-value">@Model.TotalInventoryValue.ToString("C")</div>
                <div class="icon-shape">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="dashboard-card stat-card shadow-sm">
                <div class="stat-label">Low Stock Items</div>
                <div class="stat-value">@Model.LowStockCount</div>
                <div class="icon-shape">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <div class="dashboard-card stat-card shadow-sm">
                <div class="stat-label">Active Suppliers</div>
                <div class="stat-value">@Model.TotalSuppliers</div>
                <div class="icon-shape">
                    <i class="fas fa-truck"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Low Stock Products -->
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                <h5 class="mb-0 d-flex align-items-center">
                    <i class="fas fa-exclamation-circle me-2 text-warning"></i>
                    Low Stock Products
                </h5>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Create", "Products")" class="btn btn-primary d-flex align-items-center">
                        <i class="fas fa-plus me-2"></i>
                        Add Product
                    </a>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-outline-light d-flex align-items-center">
                        <i class="fas fa-list me-2"></i>
                        View All
                    </a>
                </div>
            </div>

        </div>
        <div class="card-body p-0">
            @if (Model.HasLowStockProducts)
            {
                <div class="table-responsive">
                    <table class="table" id="lowStockTable">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>SKU</th>
                                <th class="text-center">Current Stock</th>
                                <th class="text-center">Reorder Level</th>
                                <th class="text-center">Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.LowStockProducts)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fas fa-box text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@product.Name</div>
                                                <small class="text-muted">@product.SKU</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@product.SKU</td>
                                    <td class="text-center">
                                        <span class="@(product.CurrentStock == 0 ? "text-danger" : "text-warning") fw-semibold">
                                            @product.CurrentStock
                                        </span>
                                    </td>
                                    <td class="text-center">@product.ReorderLevel</td>
                                    <td class="text-center">
                                        @if (product.CurrentStock == 0)
                                        {
                                            <span class="badge badge-danger">
                                                <i class="fas fa-times-circle me-1"></i>
                                                Out of Stock
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-exclamation-circle me-1"></i>
                                                Low Stock
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="@Url.Action("Details", "Products", new { id = product.Id })" 
                                               class="btn btn-action btn-primary"
                                               data-bs-toggle="tooltip" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Products", new { id = product.Id })" 
                                               class="btn btn-action btn-outline-light"
                                               data-bs-toggle="tooltip" title="Edit Product">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Restock", "Products", new { id = product.Id })" 
                                               class="btn btn-action" style="background-color: var(--success); border: none;"
                                               data-bs-toggle="tooltip" title="Restock Product">
                                                <i class="fas fa-plus-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4">
                    <div class="alert mb-0 text-center" style="background-color: rgba(59, 130, 246, 0.1); border: 1px solid var(--border-color); border-radius: 12px;">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="fas fa-check-circle text-success me-3 fa-2x"></i>
                            <div>
                                <h6 class="mb-1 fw-semibold">All Products Well Stocked</h6>
                                <span class="text-secondary">Your inventory levels are healthy. No products require immediate attention.</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize DataTable with custom styling
            $('#lowStockTable').DataTable({
                responsive: true,
                pageLength: 10,
                language: {
                    search: "<i class='fas fa-search me-2'></i>Search:",
                    lengthMenu: "<i class='fas fa-list-ul me-2'></i>Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries",
                    infoEmpty: "Showing 0 to 0 of 0 entries",
                    infoFiltered: "(filtered from _MAX_ total entries)",
                    emptyTable: "<div class='text-center py-4'><i class='fas fa-box-open fa-3x mb-3 text-secondary'></i><br>No low stock products found</div>"
                },
                dom: "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                     "<'row'<'col-sm-12'tr>>" +
                     "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                drawCallback: function() {
                    $('.dataTables_paginate > .pagination').addClass('justify-content-end');
                }
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
} 