@model InventoryManagementSystem.Models.ViewModels.CreateSupplierViewModel
@using InventoryManagementSystem.Models.ViewComponents

@{
    ViewData["Title"] = "Create Supplier";
}

<!-- Use a more compact container with consistent padding -->
<div class="container-fluid px-3 py-2">
    <!-- Use the existing PageHeader partial with fluent API -->
    @{
        var headerModel = InventoryManagementSystem.Models.ViewComponents.PageHeaderViewModel
            .Create("Create Supplier", "fas fa-plus-circle")
            .WithPrimaryButton("Back to Suppliers", Url.Action("Index"), "fas fa-arrow-left");
    }
    <partial name="_PageHeader" model="headerModel" />

    <div class="row g-3">
        <!-- Main Form Card -->
        <div class="col-lg-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 p-3 border rounded bg-danger-subtle"></div>
                
                <!-- Supplier Information Card -->
                <div class="card content-card shadow-sm mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center py-3">
                        <h5 class="mb-0 d-flex align-items-center">
                            <span class="icon-circle bg-primary-subtle me-2">
                                <i class="fas fa-building text-primary"></i>
                            </span>
                            Supplier Information
                        </h5>
                    </div>
                    <div class="card-body p-3">
                        <div class="row g-4 mb-0">
                            <div class="col-md-6">
                                <div class="info-section">
                                    <h6 class="section-title mb-3">
                                        <i class="fas fa-info-circle text-primary me-2"></i>Basic Details
                                    </h6>
                                    
                                    <div class="mb-3">
                                        <label asp-for="Name" class="form-label d-flex align-items-center">
                                            <i class="fas fa-building text-primary me-2"></i>Supplier Name
                                            <span class="tooltip-icon ms-2" data-bs-toggle="tooltip" data-bs-placement="top" 
                                               title="The official business name of the supplier organization."><i class="fas fa-info"></i></span>
                                        </label>
                                        <input asp-for="Name" class="form-control" placeholder="Enter supplier name" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label asp-for="ContactPerson" class="form-label d-flex align-items-center">
                                            <i class="fas fa-user-tie text-primary me-2"></i>Contact Person
                                            <span class="tooltip-icon ms-2" data-bs-toggle="tooltip" data-bs-placement="top" 
                                               title="The name of your primary contact at this supplier."><i class="fas fa-info"></i></span>
                                        </label>
                                        <input asp-for="ContactPerson" class="form-control" placeholder="Enter contact person" />
                                        <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="info-section">
                                    <h6 class="section-title mb-3">
                                        <i class="fas fa-address-card text-primary me-2"></i>Contact Information
                                    </h6>
                                    
                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label d-flex align-items-center">
                                            <i class="fas fa-envelope text-primary me-2"></i>Email Address
                                            <span class="tooltip-icon ms-2" data-bs-toggle="tooltip" data-bs-placement="top" 
                                               title="The primary email contact for this supplier. Used for purchase orders and communications."><i class="fas fa-info"></i></span>
                                        </label>
                                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter email address" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label asp-for="Phone" class="form-label d-flex align-items-center">
                                            <i class="fas fa-phone text-primary me-2"></i>Phone Number
                                            <span class="tooltip-icon ms-2" data-bs-toggle="tooltip" data-bs-placement="top" 
                                               title="The primary phone number for contacting this supplier."><i class="fas fa-info"></i></span>
                                        </label>
                                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Address Information Card -->
                <div class="card content-card shadow-sm mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center py-3">
                        <h5 class="mb-0 d-flex align-items-center">
                            <span class="icon-circle bg-primary-subtle me-2">
                                <i class="fas fa-map-marker-alt text-primary"></i>
                            </span>
                            Address Information
                        </h5>
                    </div>
                    <div class="card-body p-3">
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label d-flex align-items-center">
                                <i class="fas fa-map-marked-alt text-primary me-2"></i>Business Address
                                <span class="tooltip-icon ms-2" data-bs-toggle="tooltip" data-bs-placement="top" 
                                   title="The complete business address of the supplier. Include street, city, state/province, and postal code."><i class="fas fa-info"></i></span>
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter complete business address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="d-flex gap-2 justify-content-end mb-4">
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-1"></i> Create Supplier
                    </button>
                </div>
            </form>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Help & Tips Card -->
            <div class="card content-card shadow-sm mb-3">
                <div class="card-header d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <span class="icon-circle bg-primary-subtle me-2">
                            <i class="fas fa-lightbulb text-primary"></i>
                        </span>
                        Tips & Information
                    </h5>
                </div>
                <div class="card-body p-3">
                    <div class="tip-item mb-3 p-2 rounded bg-primary-subtle">
                        <h6 class="d-flex align-items-center mb-2">
                            <i class="fas fa-info-circle me-2"></i> Supplier Creation Tips
                        </h6>
                        <ul class="mb-0 ps-3 small">
                            <li>Enter the full legal business name</li>
                            <li>Include a specific contact person</li>
                            <li>Verify email and phone information</li>
                            <li>Provide complete address details</li>
                        </ul>
                    </div>
                    
                    <div class="tip-item p-2 rounded bg-success-subtle">
                        <h6 class="d-flex align-items-center mb-2">
                            <i class="fas fa-check-circle me-2"></i> What Happens Next?
                        </h6>
                        <p class="small mb-0">After creating a supplier, you can associate products, track orders, and manage your supplier relationships from the supplier details page.</p>
                    </div>
                </div>
            </div>

            <!-- Preview Card -->
            <div class="card content-card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 d-flex align-items-center">
                        <span class="icon-circle bg-primary-subtle me-2">
                            <i class="fas fa-eye text-primary"></i>
                        </span>
                        After Creation
                    </h5>
                </div>
                <div class="card-body p-3">
                    <h6 class="text-primary mb-3">What can you do next?</h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent border-secondary-subtle d-flex align-items-center">
                            <i class="fas fa-box-open text-primary me-2"></i>
                            <span class="text-light">Associate products</span>
                        </li>
                        <li class="list-group-item bg-transparent border-secondary-subtle d-flex align-items-center">
                            <i class="fas fa-shopping-cart text-primary me-2"></i>
                            <span class="text-light">Create purchase orders</span>
                        </li>
                        <li class="list-group-item bg-transparent border-secondary-subtle d-flex align-items-center">
                            <i class="fas fa-history text-primary me-2"></i>
                            <span class="text-light">Track order history</span>
                        </li>
                        <li class="list-group-item bg-transparent border-secondary-subtle d-flex align-items-center">
                            <i class="fas fa-chart-line text-primary me-2"></i>
                            <span class="text-light">Review supplier performance</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 