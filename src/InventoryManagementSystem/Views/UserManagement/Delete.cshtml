@model UserViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-danger bg-opacity-25">
                <div>
                    <h4 class="card-title mb-0 text-danger">
                        <i class="fas fa-user-slash me-2"></i>Delete User
                    </h4>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="alert alert-danger mb-4">
                    <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Warning!</h5>
                    <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                </div>
                
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <dl class="row">
                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@Model.UserName</dd>
                    
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>
                    
                    <dt class="col-sm-3">Full Name</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">Roles</dt>
                    <dd class="col-sm-9">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No roles assigned</span>
                        }
                    </dd>
                </dl>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="d-flex">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-times me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 