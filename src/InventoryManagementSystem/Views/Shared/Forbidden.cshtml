@model InventoryManagementSystem.Filters.ErrorViewModel
@{
    ViewData["Title"] = "Forbidden";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">403 - Forbidden</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-shield-lock" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h5 class="card-title mb-3">@Model.Message</h5>
                    <p class="text-muted">You don't have permission to access this resource.</p>
                    
                    <p class="text-muted small">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code><br/>
                        <strong>Correlation ID:</strong> <code>@Model.CorrelationId</code>
                    </p>
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 