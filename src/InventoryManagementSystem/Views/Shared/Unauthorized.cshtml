@model InventoryManagementSystem.Filters.ErrorViewModel
@{
    ViewData["Title"] = "Unauthorized";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">401 - Unauthorized</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-key" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h5 class="card-title mb-3">@Model.Message</h5>
                    <p class="text-muted">You need to sign in to access this resource.</p>
                    
                    <p class="text-muted small">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code><br/>
                        <strong>Correlation ID:</strong> <code>@Model.CorrelationId</code>
                    </p>
                    
                    <div class="mt-4">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Sign In</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ml-2">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 