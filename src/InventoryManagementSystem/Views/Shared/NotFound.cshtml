@model InventoryManagementSystem.Filters.ErrorViewModel
@{
    ViewData["Title"] = "Not Found";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">404 - Not Found</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-search" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h5 class="card-title mb-3">@Model.Message</h5>
                    <p class="text-muted">We couldn't find the resource you were looking for.</p>
                    
                    <p class="text-muted small">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code><br/>
                        <strong>Correlation ID:</strong> <code>@Model.CorrelationId</code>
                    </p>
                    
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 