@model InventoryManagementSystem.Models.ViewComponents.StatCardViewModel

<div class="card content-card shadow-sm h-100">
    <div class="card-body p-3">
        <div class="d-flex justify-content-between">
            <div>
                <h6 class="text-muted mb-2">@Model.Title</h6>
                <h2 class="mb-0">@Model.Value</h2>
                @if (Model.ShowTrend)
                {
                    <small class="@(Model.TrendValue >= 0 ? "text-success" : "text-danger")">
                        <i class="fas fa-arrow-@(Model.TrendValue >= 0 ? "up" : "down")"></i> 
                        @Math.Abs(Model.TrendValue)%
                        <span class="text-muted">@Model.TrendLabel</span>
                    </small>
                }
                else if (!string.IsNullOrEmpty(Model.Subtitle))
                {
                    <small class="text-muted">@Model.Subtitle</small>
                }
                
                @if (Model.AdditionalContent != null)
                {
                    @Model.AdditionalContent
                }
            </div>
            <div class="d-flex align-items-center">
                <span class="icon-circle @Model.IconClass">
                    <i class="@Model.Icon"></i>
                </span>
            </div>
        </div>
    </div>
</div> 